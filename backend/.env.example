# Application
APP_NAME=ContextVault
APP_VERSION=0.1.0
DEBUG=True
ENVIRONMENT=development

# Security (REQUIRED - Generate with: openssl rand -base64 32)
APP_SECRET_KEY=your-app-secret-key-here-change-this
JWT_SECRET_KEY=your-jwt-secret-key-here-change-this
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=30

# Database (REQUIRED)
DATABASE_URL=postgresql://user:password@localhost:5432/contextvaultdb

# Google OAuth (REQUIRED)
GOOGLE_OAUTH_CLIENT_ID=your-google-client-id
GOOGLE_OAUTH_CLIENT_SECRET=your-google-client-secret
GOOGLE_OAUTH_REDIRECT_URI=http://localhost:8000/api/auth/google/callback

# Epic SMART on FHIR (Optional)
EPIC_CLIENT_ID=your-epic-client-id
EPIC_CLIENT_SECRET=your-epic-client-secret
EPIC_REDIRECT_URI=http://localhost:8000/api/integrations/epic/callback
EPIC_ISSUER=https://fhir.epic.com/interconnect-fhir-oauth/oauth2
EPIC_FHIR_BASE=https://fhir.epic.com/interconnect-fhir-oauth/api/FHIR/R4

# Fitbit OAuth (Optional)
FITBIT_CLIENT_ID=your-fitbit-client-id
FITBIT_CLIENT_SECRET=your-fitbit-client-secret
FITBIT_REDIRECT_URI=http://localhost:8000/api/integrations/fitbit/callback

# Ollama
OLLAMA_HOST=http://localhost:11434
OLLAMA_DEFAULT_MODEL=llama3.1:8b
OLLAMA_TIMEOUT_SECONDS=60

# CORS (comma-separated list)
_CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# File Upload
MAX_UPLOAD_SIZE_MB=10
UPLOAD_DIR=/data/uploads

# Redis (Optional)
REDIS_URL=redis://localhost:6379/0

# Encryption
PBKDF2_ITERATIONS=100000
AES_KEY_SIZE=32
