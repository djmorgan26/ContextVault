# ============================================================================
# ROOT .ENV.EXAMPLE - SHARED SECRETS TEMPLATE
# ============================================================================
# Copy this to .env and fill in your actual secrets
# These secrets are shared across backend, frontend, and scripts

# ============================================================================
# SECURITY KEYS
# ============================================================================

# Generate with: openssl rand -base64 32
APP_SECRET_KEY=your-app-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-key-here

# ============================================================================
# DATABASE (Supabase Postgres)
# ============================================================================

DATABASE_URL=postgres://user:password@host:port/database

# Supabase keys (from Supabase dashboard)
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
DB_SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# ============================================================================
# GOOGLE OAUTH
# ============================================================================

GOOGLE_OAUTH_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_OAUTH_CLIENT_SECRET=GOCSPX-your-client-secret

# ============================================================================
# EPIC SMART ON FHIR
# ============================================================================

EPIC_CLIENT_ID=your-epic-client-id

# ============================================================================
# JIRA
# ============================================================================

JIRA_EMAIL=your-email@example.com
JIRA_API_TOKEN=your-jira-api-token
